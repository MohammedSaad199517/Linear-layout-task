<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="@dimen/marginNormal"
        android:layout_marginRight="@dimen/marginNormal"
        android:orientation="horizontal"
        android:padding="@dimen/paddingNormal"
        android:background="@drawable/rectangle_radius8"
        >
            <ImageView
                android:id="@+id/image"
                android:layout_width="93dp"
                android:layout_height="93dp"
                android:src="@drawable/person"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="start"
                >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginNormal"
                    android:fontFamily="@font/dm_sans_bold"
                    android:text="Ahmed hassan"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeLarge" />

                <TextView
                    android:id="@+id/career"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginNormal"
                    android:layout_marginTop="@dimen/marginSmall"
                    android:fontFamily="@font/dm_sans_medium"
                    android:text="Engineer"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSizeSmall" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/marginNormal"
                    android:layout_marginTop="@dimen/marginSmall"
                    >
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="12dp"
                        android:background="@drawable/icon"
                        android:layout_gravity="center"
                        android:layout_marginEnd="4dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#263238"
                        android:alpha="0.6"
                        android:fontFamily="@font/dm_sans"
                        android:textFontWeight="400"
                        android:text="UK"
                        android:textSize="13sp"
                        android:id="@+id/address"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/marginNormal"
                    android:layout_marginTop="@dimen/marginSmall"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dm_sans"
                        android:text="(150 Reviews)"
                        android:textColor="@color/black"
                        android:textFontWeight="400"
                        android:textSize="12sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5"
                            android:fontFamily="@font/dm_sans_medium"
                            android:textSize="@dimen/textSizeSmall"
                            android:textColor="#000000"
                            android:layout_marginStart="8dp"
                            />
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/star_4"
                            android:layout_marginStart="4dp"
                            android:layout_gravity="center"
                            />
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans_bold"
                android:text="3 hr"
                android:paddingLeft="@dimen/paddingSmall"
                android:paddingRight="@dimen/paddingSmall"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:background="@drawable/rectangle_radius50"
                android:layout_marginBottom="@dimen/marginNormal"
                android:textColor="@color/white"
                android:textSize="@dimen/textSizeSmall" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans"
                android:textFontWeight="500"
                android:text="Russian"
                android:textColor="#122940"
                android:alpha="0.87"
                android:layout_marginBottom="9dp"
                android:textSize="@dimen/textSizeSmall" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans"
                android:textFontWeight="400"
                android:text="5 Days ago"
                android:textColor="#122940"
                android:alpha="0.38"
                android:textSize="@dimen/textSizeSmall" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


